generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id            String   @id @default(ulid())
  title         String
  authors       String[]
  description   String
  categories    String[]
  pageCount     Int
  publishedDate String
  publisher     String
  imageLink     String
  language      String
  isFromAPI     Boolean
  totalRating   Int
  countRating   Int
}

model AppUser {
  id           String         @id @default(ulid())
  email        String         @unique
  userName     String
  imgURL       String
  description  String
  books        String[]
  friends      String[]
  isMyFriend   Boolean?
  isAdmin      Boolean
  UserInfoBook UserInfoBook[]
}

model UserInfoBook {
  id       String     @id @default(ulid())
  user     AppUser    @relation(fields: [userId], references: [id])
  userId   String
  bookId   String
  year     Int?
  month    Int?
  note     Int?
  comments String?
  status   BookStatus

  @@unique([userId, bookId]) // <- ClÃ© composite UNIQUE
  @@map("BookInfo")
}

enum BookStatus {
  READ
  IN_PROGRESS
  TO_READ
}

